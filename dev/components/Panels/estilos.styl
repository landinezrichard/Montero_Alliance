@media screen and (min-width:480px)
	.Panels	
		&-item			
			width 50%
/*Tablet Landscape*/
@media screen and (min-width:1024px)
	.Panels
		position relative
		z-index 11
		margin-top 75px	
		&-list
			display flex
			width 100%
			align-items stretch
			height 100%
			float left
			flex-flow row nowrap
		&-item
			display inline-block
			position relative
			float left
			text-align center
			width 100%
			height 100%
			perspective 1000
			margin-right 1px
			margin-bottom 0
			&:hover 
				.Panels-hover
					transform rotateY(180deg)
				.Panels-link
					width 100%
					height 145px
					line-height 145px
					margin 5px auto
			&:last-child
				margin-right 0
								
		&-link
			width 90%
			transition all .6s
			font-size 1.68em
			width 90%
			margin 40px auto			
			
