/*PANELS*/
.Panels
	display inline-block
	width 100%
	margin-top 59px
	// margin-top 4%
	height 92%
	background $black
	float left
	&-list		
		display inline-block
		width 100%		
		height 100%
		float left
		flex-flow column nowrap
	&-item
		display inline-block
		position relative
		float left
		text-align center
		width 100%
		height 200px
		margin-bottom 1px		
		&:last-child
			margin-bottom 0
	&-hover
		position relative
		transform-style preserve-3d		
		transition .6s
		width 100%
		height 100%
	&-front
	&-back
		position absolute
		top 0
		left 0
		backface-visibility hidden
		width 100%
		height 100%
	&-front		
		z-index 8
		transform rotateY(0deg)		t
		
	&-back
		transform rotateY(180deg)
		
	&-link
		display inline-block
		position absolute
		bottom 0
		left 0
		right 0
		color $white
		background $transparent_black3
		font-weight 300
		font-size 1.48em
		// width 290px
		width 100%
		height 73px
		line-height 73px
		margin 0 auto
		
#panel-1 .Panels-front
	background url("../images/puertos/banner-2.jpg") center
	background-size cover
	
