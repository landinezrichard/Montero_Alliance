/*SOCIAL*/
.Social
	display inline-block
	width 100%
	background $black url("../images/social/flamingos.jpg") center top
	background-repeat no-repeat
	background-size cover
	margin-top 59px
	
	&-main
		display inline-block		
		text-align left		
		margin 0 20px
	
	&-mainTitle
		color $white
		font-size 2em !important
	&-titleBorde
		background $white
	&-description
		color $white
		margin 0 0 20px
		background url("../images/social/blur.png")
		background-size 100% 100%
		
	&-list
		display inline-block
		width 100%
		margin 20px 0
		
	&-item
		display inline-block
		background $transparent_black
		width 95%
		margin 15px 2.5%
		vertical-align top
		min-height 285px
		
	&-title
		background $lima
		color $black
		font-weight 700
		font-size 1.42em
		width 100%
		height 65px
		line-height 65px
		margin 0
		
	&-desc2
		color $white
		font-weight 400
		font-size 1.06em
		margin 32px 20px
		text-align justify
		
		
/*Tablet Landscape*/
@media screen and (min-width:1024px)
	.Social
		margin-top 75px
		&-main
			max-width 445px
			margin 0 40px
			float left
		&-mainTitle
			max-width 400px
			font-size 2.5em !important
		&-list
			margin 30px 0
		&-item
			width 30%
			margin 15px 1.5%
		&-title
			font-size 1.62em