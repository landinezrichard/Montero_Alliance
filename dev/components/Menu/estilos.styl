/*MENU*/

.Menu
	display none
	width 100%
	background $black
	
	/*mobile*/
	position fixed
	top 59px
	left 0
	z-index 9
	height 85%
	overflow-y auto

	&-list
		margin 0
		padding 0
		list-style none
		display inline-block
		width 100%
		text-align center
	&-item
		display inline-block
		width 100%
		height 60px
		line-height 60px
		border-bottom 1px solid $gray3
		
	&-link
		display inline-block
		width 100%
		height 100%
		color $light_gray3
		font-weight 300
		font-size 1.3em
/*Tablet Landscape*/
@media screen and (min-width:1024px)
	.Menu
		display inline-block !important	
		position static
		top inherit
		left inherit
		z-index inherit
		height auto
		overflow inherit
		&-list			
			display flex
		&-item
			display inline-block
			width 16.6%
			height 90px
			line-height 90px
			border-left 1px solid $gray3
			&:first-child
				border-left none
		&-mobile
			display none
		&-link		
			font-size 1.68em