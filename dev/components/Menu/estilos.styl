/*MENU*/

.Menu
	display inline-block
	width 100%
	background $black

	&-list
		margin 0
		padding 0
		list-style none
		display flex
		width 100%
		text-align center
	&-item
		display inline-block
		width 16.6%
		height 90px
		line-height 90px		
		border-left 1px solid $gray3
		&:first-child
			border-left none
	&-link
		display inline-block
		width 100%
		height 100%
		color $light_gray3
		font-weight 300
		font-size 1.68em