/*PUERTOS*/

.Puertos
	display inline-block
	width 100%
	float left
	margin-top 59px

	&-banner
		display inline-block
		width 100%
		position relative
		text-align center
		
	&-bannerImage
		margin-bottom -4px
		
	&-bannerText
		display inline-block
		width 100%
		height 100%		
		margin 0 auto
		max-width 1200px
		background $black		
		
	&-bannerLogo
		display inline-block
		position absolute
		top 38%
		left 50%
		width 100px
		margin-top -50px
		margin-left -50px
		// margin-top -110px
		
	&-bannerLetras
		margin 20px 0
	
	&-main
		display inline-block
		width 100%
		margin 20px 0

	&-titleContainer
		display inline-block
		width 100%
		margin 20px 0
	&-mainTitle
		margin 0
		font-family "Century", sans-serif
		font-weight 400
		font-size 2.5em
		color $black
		text-transform uppercase
	&-titleBorde
		display inline-block
		width 84px
		height 5px
		background $black
	&-description
		display inline-block
		margin 0 20px 20px
		font-weight 400
		font-size 1.06em
		color $gray2
		max-width 818px
	&-table
		display inline-block
		width 90%
		margin 20px 5% 10px
	&-column
		display inline-block
		width 91%
		margin 10px 2%
		// text-align left
		vertical-align middle
	&-text
		display inline-block
		width 100%
		text-align left
	&-title
		display inline-block
		width 100%
		text-align left
		font-weight 400
		font-size 1.62em
		color $black2
		margin 1em 0 0
	&-desc2
		display inline-block
		width 100%		
		text-align justify
		font-weight 400
		font-size 0.93em
		color $gray2
		margin .5em 0
	&-list
		display inline-block
		width 100%		
		text-align left
		margin 0
		padding 0 20px
		font-weight 400
		font-size 1.06em
		color $black
	&-listItem p
		color $gray2
		margin 0
	/*Lineas en el logo*/
	&-fancy
		display inline-block
		// width 100%
		width 225px
		text-align center
		position relative
		
	&-line1
		background $gray4
		display inline-block
		width 170px
		height 1px
		transform rotate(120deg)
		position absolute
		// top 300px
		// left 68px
		top 77%
		left -18%
		opacity 0.8
		transition all .3s
	&-line2
		background $gray4
		display inline-block
		width 170px
		height 1px
		transform rotate(120deg) 
		position absolute
		// top 72px
		// left 200px
		top 18%
		left 42%
		opacity 0.8
		transition all .3s
	&-line3
		background $gray4
		display inline-block
		width 255px
		height 1px
		transform rotate(240deg)
		position absolute
		// top 164px
		// left 126px
		top 38%
		left 5%
		opacity 0.8
		transition all .3s
/*Tablet Landscape*/
@media screen and (min-width:1024px)
	.Puertos
		margin-top 75px
		
		&-bannerText			
			left 0
			right 0
			top 50%
			// top 0
			position absolute
			background transparent
		&-bannerLogo
			position static
			// top 38%
			// left 50%
			width 150px
			margin-top -75px
			margin-left 0
		&-main
			margin 30px 0
		&-titleContainer
			margin 25px 0 26px
		&-mainTitle
			font-size 2.8em
		&-column		
			width 41%
		&-desc2		
			max-width 370px
		&-list			
			max-width 370px
@media screen and (min-width:1280px)
	.Puertos
		&-bannerLetras
			margin-top 50px
		&-main
			margin 50px 0
		&-titleContainer
			margin 45px 0 26px
		&-mainTitle
			font-size 3.12em
@media screen and (min-width:1600px)
	.Puertos
		&-bannerLogo			
			width auto
			margin-top -90px		