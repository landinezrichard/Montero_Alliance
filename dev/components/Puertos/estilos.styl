/*PUERTOS*/

.Puertos
	display inline-block
	width 100%
	float left
	margin-top 75px

	&-banner
		display inline-block
		width 100%
		position relative
		text-align center
		
	&-bannerText
		display inline-block
		width 100%
		// height 100%
		left 0
		right 0
		top 50%
		position absolute
		
	&-bannerLogo
		display inline-block		
		margin-top -110px
		
	&-bannerLetras
		margin-top 70px
	
	&-main
		display inline-block
		width 100%
		margin 50px 0

	&-titleContainer
		display inline-block
		width 100%
		margin 45px 0 26px
	&-mainTitle
		margin 0
		font-family "Century", sans-serif
		font-weight 400
		font-size 3.12em
		color $black
		text-transform uppercase
	&-titleBorde
		display inline-block
		width 84px
		height 5px
		background $black
	&-description
		display inline-block
		margin 0 0 20px
		font-weight 400
		font-size 1.06em
		color $gray2
		max-width 818px
	&-table
		display inline-block
		width 90%
		margin 20px 5% 10px
	&-column
		display inline-block
		width 41%
		margin 10px 2%
		text-align left
		vertical-align top
	&-title
		display inline-block
		width 100%
		text-align left
		font-weight 400
		font-size 1.62em
		color $black2
		margin 0
	&-desc2
		display inline-block
		width 100%
		max-width 370px
		text-align justify
		font-weight 400
		font-size 0.93em
		color $gray2
		margin .5em 0
	&-list
		display inline-block
		width 100%
		max-width 370px
		text-align left
		margin 0
		padding 0 20px
		font-weight 400
		font-size 1.06em
		color $black
	&-listItem p
		color $gray2
		margin 0