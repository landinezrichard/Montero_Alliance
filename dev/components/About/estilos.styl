/*ABOUT*/
.About
	&-banner
		position absolute
		top 0
		left 0
		right 0
		width 100%
	&-bannerText
		display inline-block
		position absolute
		text-align left
		color $gray4
		padding 64px 74px
	&-mainTitle
		color $white
		text-transform uppercase
		font-weight 400
		font-size 2.5em
		margin 0.83em 0 0.3em
	&-mainDesc
		font-weight 400
		font-size 1.06em
		color $gray4
		text-align justify
		max-width 392px
	&-desc2
		display inline-block
		width 100%
		max-width 414px
		text-align justify
		font-weight 400
		font-size 1.06em
		color $gray2
		margin .5em 0